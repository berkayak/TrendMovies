<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/paddingXS"
    android:layout_marginBottom="@dimen/paddingXS"
    android:background="@color/black4"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/miniPosterIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/paddingXS"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TrendMoviesTextView.H1" />

        <TextView
            android:id="@+id/genresTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TrendMoviesTextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/releaseYearTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                style="@style/TrendMoviesTextView.Tiny" />

            <TextView
                android:id="@+id/scoreTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                style="@style/TrendMoviesTextView.Tiny"
                android:textAlignment="textEnd"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>